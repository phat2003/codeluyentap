mixin buttonssidebar(linkbutton, textbutton)
    a.buttons-sidebar(href=linkbutton) #{textbutton}

mixin buttonsfilter(buttonfilter)
    button.buttons-filter #{buttonfilter}

mixin boxchars(srcimgchar, bnamechar, contentchar)
    .box-character
        img.img-characters(src=srcimgchar, alt='image-character')
        .container-characters
          p.name-characters
            b.namechar #{bnamechar}
          p #{contentchar}
